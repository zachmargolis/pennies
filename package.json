{
  "name": "pennies",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">= 20",
    "npm": ">= 10"
  },
  "scripts": {
    "download": "curl -L 'https://docs.google.com/spreadsheets/d/1HN1PZCxGbT6H4H7W81HvOlsGv91MDyuqVg39qmkOXto/export?exportFormat=csv' > pennies-orig.csv",
    "csv": "ruby scripts/convert.rb < pennies-orig.csv > public/pennies.csv",
    "dev": "npm run csv && vite",
    "build": "npm run csv && npm run build:client && npm run build:server && npm run build:prerender",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/render-server.tsx --outDir dist/server",
    "build:prerender": "mkdir -p _site && cp -r dist/client/ _site && node src/render-to-static > _site/index.html",
    "preview": "npm run build && mkdir -p tmp && (ln -w -s ../_site tmp/pennies || true) && npx serve tmp --no-clipboard",
    "clean": "rm -rf dist _site tmp",
    "lint": "npx prettier --write"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "d3-array": "^3.2.4",
    "d3-axis": "^1.0.8",
    "d3-collection": "^1.0.3",
    "d3-dsv": "^3.0.1",
    "d3-fetch": "^3.0.1",
    "d3-force": "^1.0.6",
    "d3-format": "^2.0.0",
    "d3-path": "^3.1.0",
    "d3-request": "^1.0.5",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.0.0",
    "d3-selection": "^1.1.0",
    "d3-shape": "^3.2.0",
    "d3-time": "^3.1.0",
    "d3-time-format": "^2.1.1",
    "express": "^4.21.2",
    "preact": "^10.19.3",
    "preact-fetching": "^0.1.1",
    "preact-render-to-string": "^6.3.1",
    "sirv": "^2.0.3",
    "vite": "^7.1.11"
  },
  "devDependencies": {
    "@18f/eslint-plugin-identity": "^2.0.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/d3-array": "^3.2.1",
    "@types/d3-axis": "^3.0.6",
    "@types/d3-collection": "^1.0.13",
    "@types/d3-dsv": "^3.0.7",
    "@types/d3-fetch": "^3.0.7",
    "@types/d3-force": "^3.0.9",
    "@types/d3-format": "^3.0.4",
    "@types/d3-path": "^3.0.2",
    "@types/d3-scale": "^4.0.8",
    "@types/d3-scale-chromatic": "^3.0.3",
    "@types/d3-selection": "^1.1.0",
    "@types/d3-shape": "^3.1.6",
    "@types/d3-time": "^3.0.3",
    "@types/d3-time-format": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "serve": "^14.2.5",
    "typescript": "^5.2.2"
  }
}
